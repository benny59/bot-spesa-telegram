source "https://rubygems.org"

gem "sqlite3"
gem "telegram-bot-ruby"
gem "httparty"
gem "prawn"        # For PDF generation
gem "barby"        # Barcode generation
gem "chunky_png"   # For rendering barcodes into PNG
gem "openfoodfacts" # For interacting with Open Food Facts API

group :development do
  gem "pry"        # For debugging
  gem "rubocop", require: false
end

group :test do
  gem "rspec"        # For testing
  gem "factory_bot"  # For test data generation
  gem "webmock"
end

